source :rubygems

gem 'sinatra'             # To serve the resources
gem 'data_mapper'         # ORM
gem 'dm-sqlite-adapter'   # SQLite3 adapter
gem 'haml'                # Templating
gem 'omniauth'            # Authentication
gem 'omniauth-openid'     # Authentication

gem 'thin'                # Needed to run openid with google

gem 'racksh'              # Console for mucking with the database